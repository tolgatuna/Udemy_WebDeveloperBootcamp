<% include partials/header %>
	<div class="container">
		<header class="jumbotron">
			<div class="container">
				<h1> Welcome To YeldCamp! </h1>
				<p>View our hand-picked campgrounds grom all over the world!</p>
				<p>
					<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
				</p>
			</div>
		</header>

		<div class="row" style="display:flex; flex-wrap:wrap;">
			<% campgrounds.forEach(function(campground){ %>
				<div class="col col-md-3 col-sm-6">
					<div class="card" >
						<img src="<%= campground.image %>" class="card-img-top img-thumbnail">
						<h5 class="card-title text-center"><%= campground.name %></h5>
						<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
					</div>
				</div>
			<% }); %>
		</div>

	</div>
<% include partials/footer %>